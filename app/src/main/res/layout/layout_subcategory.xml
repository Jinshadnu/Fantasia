<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="subcategories"
            type="com.vingcoz.fantasia.pojo.SubCategories" />
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="@dimen/size_3dp"
        android:layout_marginLeft="@dimen/size_2dp"
        android:layout_marginRight="@dimen/size_2dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_subcategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="@dimen/size_5dp"
            app:cardCornerRadius="@dimen/size_5dp"
            app:cardElevation="@dimen/size_10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="@dimen/size_90dp"
                    android:layout_height="@dimen/size_80dp"
                    app:subcategory="@{subcategories.sub_category_image}"
                    android:layout_centerInParent="true"
                    />


                <TextView
                    android:id="@+id/text_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{subcategories.sub_category_name}"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:layout_below="@+id/imageview"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:layout_marginRight="@dimen/size_5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/size_16dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/size_5dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/amaranth"
                    />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>




    </RelativeLayout>
</layout>
