<?xml version="1.0" encoding="utf-8"?>
<layout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".home.ui.profile.ProfileFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_220dp"
                android:background="@color/purple_700"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_30dp">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/size_120dp"
                        android:layout_height="@dimen/size_100dp"
                        android:src="@drawable/ic_profile"
                        android:layout_centerHorizontal="true"
                        android:elevation="0.3dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/white"
                            android:layout_marginLeft="@dimen/size_15dp"
                            android:layout_marginTop="@dimen/size_50dp"
                            android:layout_marginRight="@dimen/size_15dp"
                            android:layout_marginBottom="@dimen/size_15dp"
                            app:cardCornerRadius="@dimen/size_8dp"
                            app:cardElevation="@dimen/size_10dp"
                            app:contentPaddingTop="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/size_50dp"
                                    android:fontFamily="@font/amaranth"
                                    android:text="Your Name"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/size_20dp"
                                    android:textStyle="normal" />

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/size_15dp"
                                    android:background="@drawable/profile_section_border"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/textView5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:drawableTop="@drawable/ic_smartphone"
                                        android:drawablePadding="@dimen/padd_10"
                                        android:fontFamily="@font/amaranth"
                                        android:padding="@dimen/size_10dp"
                                        android:text="9526026636"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/size_16dp"
                                        android:textStyle="normal"
                                        app:layout_constraintEnd_toStartOf="@+id/textView6"
                                        app:layout_constraintHorizontal_bias="0.5"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        tools:ignore="RtlCompat" />

                                    <TextView
                                        android:id="@+id/textView6"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:drawableTop="@drawable/ic_gmail"
                                        android:drawablePadding="@dimen/padd_10"
                                        android:fontFamily="@font/amaranth"
                                        android:padding="@dimen/size_10dp"
                                        android:text="jinshadnu06@gmail.com"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/size_15dp"
                                        android:textStyle="normal"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0.5"
                                        app:layout_constraintStart_toEndOf="@+id/textView5"
                                        app:layout_constraintTop_toTopOf="parent"
                                        tools:ignore="RtlCompat" />

                                </androidx.constraintlayout.widget.ConstraintLayout>


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_15dp"
                            android:layout_marginRight="@dimen/size_15dp"
                            android:layout_marginBottom="@dimen/padd_10"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/size_8dp"
                            app:cardElevation="@dimen/size_10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/size_5dp">

                                    <TextView
                                        android:id="@+id/text_editprofile"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:drawableLeft="@drawable/ic_man"
                                        android:drawableRight="@drawable/ic_baseline_person_24"
                                        android:drawablePadding="@dimen/size_8dp"
                                        android:fontFamily="@font/amaranth"
                                        android:gravity="center_vertical"
                                        android:padding="@dimen/size_8dp"
                                        android:text="Edit Profile"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/size_16dp" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginLeft="@dimen/size_8dp"
                                        android:layout_marginTop="@dimen/size_8dp"
                                        android:layout_marginRight="@dimen/size_8dp"
                                        android:background="@color/purple_200"
                                        android:padding="@dimen/size_8dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/size_5dp">

                                    <TextView
                                        android:id="@+id/text_address"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:drawableLeft="@drawable/ic_address"
                                        android:drawablePadding="@dimen/size_8dp"
                                        android:fontFamily="@font/amaranth"
                                        android:gravity="center_vertical"
                                        android:padding="@dimen/size_8dp"
                                        android:text="Delivery Address"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/size_16dp" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginLeft="@dimen/size_8dp"
                                        android:layout_marginTop="@dimen/size_8dp"
                                        android:layout_marginRight="@dimen/size_8dp"
                                        android:background="@color/purple_200"
                                        android:padding="@dimen/size_8dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/size_5dp">


                                    <TextView
                                        android:id="@+id/text_history"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:drawableLeft="@drawable/ic_shopping_cart"
                                        android:drawableRight="@drawable/ic_baseline_lock_24"
                                        android:drawablePadding="@dimen/size_8dp"
                                        android:fontFamily="@font/amaranth"
                                        android:gravity="center_vertical"
                                        android:padding="@dimen/size_8dp"
                                        android:text="My Orders"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/size_16dp" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginLeft="@dimen/size_8dp"
                                        android:layout_marginTop="@dimen/size_8dp"
                                        android:layout_marginRight="@dimen/size_8dp"
                                        android:background="@color/purple_200"
                                        android:padding="@dimen/size_8dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/size_5dp">

                                    <TextView
                                        android:id="@+id/text_changepassword"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:drawableLeft="@drawable/ic_password__1_"
                                        android:drawableRight="@drawable/ic_baseline_lock_24"
                                        android:drawablePadding="@dimen/size_8dp"
                                        android:fontFamily="@font/amaranth"
                                        android:gravity="center_vertical"
                                        android:padding="@dimen/size_8dp"
                                        android:text="Change Password"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/size_16dp" />


                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginLeft="@dimen/size_8dp"
                                        android:layout_marginTop="@dimen/size_8dp"
                                        android:layout_marginRight="@dimen/size_8dp"
                                        android:background="@color/purple_200"
                                        android:padding="@dimen/size_8dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/size_5dp">

                                    <TextView
                                        android:id="@+id/text_forgetpassword"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:drawableLeft="@drawable/ic_door_key"
                                        android:drawablePadding="@dimen/size_8dp"
                                        android:fontFamily="@font/amaranth"
                                        android:gravity="center_vertical"
                                        android:padding="@dimen/size_8dp"
                                        android:text="Forget Password"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/size_16dp" />


                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginLeft="@dimen/size_8dp"
                                        android:layout_marginTop="@dimen/size_8dp"
                                        android:layout_marginRight="@dimen/size_8dp"
                                        android:background="@color/purple_200"
                                        android:padding="@dimen/size_8dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/size_5dp">

                                    <TextView
                                        android:id="@+id/text_logout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:drawableLeft="@drawable/ic_log_out"
                                        android:drawablePadding="@dimen/size_8dp"
                                        android:fontFamily="@font/amaranth"
                                        android:gravity="center_vertical"
                                        android:padding="@dimen/size_8dp"
                                        android:text="Logout"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/size_16dp" />


                                </LinearLayout>


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>




    </ScrollView>
</layout>
