<!--                    android:drawableLeft="@drawable/ic_baseline_delete_24"-->
<!--                    android:textColor="@color/colorblack"-->
<!--                    android:fontFamily="@font/amaranth"/>-->

<!--            </RelativeLayout>-->

        </RelativeLayout>





    </androidx.cardview.widget.CardView>
</layout>
